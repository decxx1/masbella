---
import Menu from "@/components/Menu.jsx";
import '@/styles/header.css'
import {
  telphoneReadble,
  telphoneLinkeable,
  address,
  schedules,
  instagram,
  facebook,
  mapUrl,
} from "@/services/enviroment.js";
import IconPhone from "@/components/icons/Phone.astro";
import IconMapMarker from "@/components/icons/MapMarker.astro";
import IconClock from "@/components/icons/Clock.astro";
import IconInstagram from "@/components/icons/Instagram.astro";
import IconFacebook from "@/components/icons/Facebook.astro";
---

<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
  <div class="offcanvas__logo">
    <a
      href="./"
      style="justify-content: center;display: flex;margin: -35px 0 0 -15px;"
    ><img
        src="img/logo-web.png"
        alt="logo más bella"
        class="w-max"
    /></a>
  </div>
  <div id="mobile-menu-wrap"></div>
  <div class="slicknav_menu">
    <nav class="slicknav_nav slicknav_hidden" role="menu">
      <ul>
        <li ><a href='./' role="menuitem">Inicio</a></li>
        <li ><a href='./servicios' role="menuitem">Servicios</a></li>
        <li ><a href='./about' role="menuitem">Nosotros</a></li>
        <li ><a href='./franquicias' role="menuitem">Franquicias</a></li>
      </ul>
    </nav>
  </div>
  <div class="offcanvas__btn">
    <a href="./contacto" class="primary-btn">Contacto</a>
  </div>
  <ul class="offcanvas__widget">
    <li>
      <a target="_blank" href={"tel:" + telphoneLinkeable}
        ><IconPhone className="inline" /> {telphoneReadble}</a>
    </li>
    <li><a target="_blank" href={mapUrl}><IconMapMarker className="inline" /> {address}</a></li>
    <li><IconClock className="inline" /> {schedules}</li>
  </ul>
  <div class="offcanvas__social">
    <a target="_blank" href={instagram}><IconInstagram /></a>
    <a target="_blank" href={facebook}><IconFacebook /></a>
  </div>
</div>

<div class="header__top">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 px-4">
      <div class="col-span-12 lg:col-span-8">
        <ul class="header__top__left">
          <li class="inline-block">
            <a  target="_blank" href={"tel:" + telphoneLinkeable}>
                <IconPhone className="inline" />
                {telphoneReadble}
            </a>
          </li>
          <li class="inline-block">
            <a class="max-md:hidden" target="_blank" href={mapUrl}>
                <IconMapMarker className="inline" />{address}
            </a>
          </li>
        </ul>
      </div>
      <div class="col-span-12 lg:col-span-4 max-md:hidden">
        <div class="header__top__right">
          <a href="./contacto">PRIMERA CITA GRATUITA</a>
        </div>
      </div>
    </div>
  </div>
</div>
<header class="header fixed top-0 w-full z-50">
  <div class="container mx-auto">
    <div class="grid grid-cols-12 px-2">
      <div class="col-span-12 min-[990px]:col-span-2">
        <div class="header__logo">
          <a href="./" ><img
              src="img/logo.png"
              alt="logo más bella"
              class="w-36" /></a>
        </div>
      </div>
      <div class="col-span-12 min-[990px]:col-span-10">
        <Menu client:load />
      </div>
    </div>
    <div class="canvas__open">
      <!-- hamburger icono   -->
      <svg
        class="inline text-primary-100 mt-1"
        xmlns="http://www.w3.org/2000/svg"
        width="1.2em"
        height="1em"
        viewBox="0 0 1536 1280"
      ><path
          fill="currentColor"
          d="M1536 1088v128q0 26-19 45t-45 19H64q-26 0-45-19t-19-45v-128q0-26 19-45t45-19h1408q26 0 45 19t19 45m0-512v128q0 26-19 45t-45 19H64q-26 0-45-19T0 704V576q0-26 19-45t45-19h1408q26 0 45 19t19 45m0-512v128q0 26-19 45t-45 19H64q-26 0-45-19T0 192V64q0-26 19-45T64 0h1408q26 0 45 19t19 45"
        ></path></svg>
    </div>
  </div>
</header>

<style>
  @media only screen and (max-width: 767px) {
  .slicknav_menu {
    background: transparent;
    padding: 0;
  }
}
.slicknav_menu {
  font-size: 16px;
}
.slicknav_menu, .slicknav_menu * {
  box-sizing: border-box;
}
@media only screen and (max-width: 767px) {
  .slicknav_nav {
    display: block !important;
  }
}
.slicknav_nav {
  clear: both;
  color: #fff;
  margin: 0;
  font-size: .875em;
}
.slicknav_nav, .slicknav_nav ul {
  list-style: none;
  overflow: hidden;
  padding: 0;
}
.slicknav_nav, .slicknav_nav ul li {
  margin: 20px auto;
}
@media only screen and (max-width: 767px) {
  .slicknav_nav .slicknav_row, .slicknav_nav a {
    padding: 7px 0;
    margin: 0;
    color: #111111;
    font-weight: 600;
  }
}
.slicknav_nav a {
  text-decoration: none;
}
.slicknav_nav .slicknav_row, .slicknav_nav a {
  padding: 5px 10px;
  margin: 2px 5px;
}

@media only screen and (max-width: 767px) {
  .slicknav_nav a:hover {
    border-radius: 0;
    background: transparent;
    color: #111111;
  }
}
.slicknav_nav a:hover {
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  background: var(--color-primary);
  color: white;
  padding: 2px 10px;
}
@media only screen and (max-width: 767px) {
  .slicknav_nav .slicknav_row, .slicknav_nav a {
    padding: 7px 0;
    margin: 0;
    color: #111111;
    font-weight: 600;
  }
}
a:hover, a:focus {
  text-decoration: none;
  outline: none;
  color: inherit;
}


</style>
