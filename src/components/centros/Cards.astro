---
interface Props {
    images: {
        src: string;
        mini: string;
        class: string;
        width: number;
        height: number;
    }[];

    title: string;
    iframe: string;
    id: string;
}

const { images, title, iframe, id } = Astro.props;
import Gallery from '@/components/centros/Gallery.astro';
---
<section class="even:bg-body-light pb-10 pt-1">
    <div id={id} class="container mx-auto p-4 mt-16">
        <div class="border bg-white border-primary-50 rounded-lg shadow shadow-primary-50 p-4">
            <header class="bg-primary-100 rounded-lg py-4 mb-4">
                <h3 class="text-center text-4xl font-semibold text-white">{title}</h3>
            </header>
            <div class="grid grid-cols-12 py-4 md:px-4">
                <slot />
                <div class="col-span-12 max-sm:mt-6 sm:col-span-5 border border-primary-50 rounded-lg shadow p-4 md:mx-4" set:html={iframe}>
                </div>
            </div>
            <div>
                <Gallery
                    images={images}
                />
            </div>
        </div>
    </div>
</section>
