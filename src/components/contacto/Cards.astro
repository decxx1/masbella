---
interface Props {
    title: string;
    iframe: string;
}

const { title, iframe } = Astro.props;
---
<section class="pb-10">
    <div class="container mx-auto p-4 mt-16">
        <div class="border bg-white border-primary-50 rounded-lg shadow shadow-primary-50 p-4">
            <header class="bg-primary-100 rounded-lg py-4 mb-4">
                <h3 class="text-center text-4xl font-semibold text-white">{title}</h3>
            </header>
            <div class="py-4">
                <slot />
                <div class="h-72 mt-6 border border-primary-50 rounded-lg shadow p-4 md:mx-4" set:html={iframe}></div>
            </div>
        </div>
    </div>
</section>
